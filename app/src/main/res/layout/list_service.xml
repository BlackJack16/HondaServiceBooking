<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            android:background="#f5f5f5">

            <TextView
                android:text="Kode Booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#444"
                android:layout_marginRight="5dp" />

            <TextView
                android:text="#44513"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblKode"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:text="Di service pada "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777"
                android:textSize="12sp" />
            <TextView
                android:text="17 Juli 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblTgl"
                android:textColor="#777"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Vario Techno 150CC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblVariant"
                    android:textColor="@android:color/black"
                    android:layout_weight="1" />

                <TextView
                    android:text="2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTahun"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_dot"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />

                <TextView
                    android:text="BG 8987 OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblPlat"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="Total Biaya: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />

                <TextView
                    android:text="Rp 125.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTotal"
                    android:layout_weight="1"
                    android:textColor="#444"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#f5f5f5" />

        <TextView
            android:text="LIHAT SERVICE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEdit"
            android:padding="14dp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>